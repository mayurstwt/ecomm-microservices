generator client {
  provider = "prisma-client-js"  // FIXED: Added "-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource authdb {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}